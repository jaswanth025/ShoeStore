  <body>
    <!-- Your content here -->
    <!-- Header -->
    <header>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top">
        <%- include('header') %>
      </nav>
    </header>

    <!-- Main content -->
    <main>
      <!-- Carousel -->

      <div style="margin-left: 100px; padding-top: 150px">
        <h2>Bidded shoes</h2>
        <% bidShoes.forEach(shoe => { %>
        <a href="/view/<%= shoe._id %>" class="product-card-link">
          <div class="product-card">
            <!-- Display shoe image -->
            <div class="product-details">
              <h2><%= shoe.name %></h2>
              <p>Price: <%= shoe.price %> dollars</p>
              <p>Bid Price <%= shoe.bidprice %> dollars</p>
              <p>Category: <%= shoe.category %></p>
              <!-- Add a link or button to view details -->
              <form action="/accept-bid" method="POST" style="display: inline">
                <input type="hidden" name="shoeId" value="<%= shoe._id %>" />
                <button type="submit" class="btn btn-accept">Accept</button>
              </form>
              <form action="/reject-bid" method="POST" style="display: inline">
                <input type="hidden" name="shoeId" value="<%= shoe._id %>" />
                <button type="submit" class="btn btn-reject">Reject</button>
              </form>
            </div>
          </div>
        </a>
        <% }); %>
      </div>

      <!-- Footer -->
      <footer class="container">
        <!-- Footer content -->
      </footer>
    </main>

    <!-- JavaScript -->
    <script
      src="/docs/5.3/dist/js/bootstrap.bundle.min.js"
