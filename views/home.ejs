<body>
    <!-- Your content here -->
    <!-- Header -->
    <header  >
        <nav class="navbar navbar-expand-md navbar-dark fixed-top " >
            <%- include('header') %>
        </nav>
    </header>

    <!-- Main content -->
    <main >
        <!-- Carousel -->
        <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel" style="margin-top: 100px;">
            <%- include('slide') %>
        </div>

        <div style="margin-left:100px ;" >
        <% shoes.forEach(shoe => { %>
            <a href="/view/<%= shoe._id %>" class="product-card-link">
                <div class="product-card">
                    <!-- Display shoe image -->
                    <img src="data:<%= shoe.Pic.contentType %>;base64,<%= shoe.Pic.data.toString('base64') %>" alt="<%= shoe.name %>" class="product-image">
                    <div class="product-details">
                        <h2><%= shoe.name %></h2>
                        <p>Price: <%= shoe.price %> Rs</p>
                        <p>Category: <%= shoe.category %></p>
                        <!-- Add a link or button to view details -->
                        <button class="btn btn-primary" style="background-color:  rgb(29, 195, 87);">View Details</button>
                    </div>
                </div>
            </a>
        <% }); %>
        
        </div>
        

        <!-- Footer -->
        <footer class="container">
            <!-- Footer content -->
        </footer>
    </main>

    <!-- JavaScript -->
    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
